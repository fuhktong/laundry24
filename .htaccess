RewriteEngine On

# Redirect old React routes to new PHP structure
RewriteRule ^about/?$ index.php?page=about [L]
RewriteRule ^services/?$ index.php?page=services [L]
RewriteRule ^laundroworks/?$ index.php?page=laundroworks [L]
RewriteRule ^contact/?$ index.php?page=contact [L]

# Handle index page
RewriteRule ^$ index.php [L]

# Allow CSS files in pages directory but block PHP files
RewriteRule ^pages/.*\.css$ - [L]
RewriteRule ^pages/.*\.php$ - [F,L]
# Prevent access to includes directory
RewriteRule ^includes/ - [F,L]